{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ESNext",
    "module": "es2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": ["es2015", "dom"],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    ".idea"
  ]
}